<div class="container px-5 px-sm-o">
  <div class="row">
    <div class="col-md-3">
      <h1>User Info</h1>
          <%= image_tag user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                 <tr><th>name</th>
                     <td><%= user.name %></td></tr>
                 <tr><th>introduction</th>
                     <td><%= user.introduction %></td></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>

          <h2 class="mt-3">New book</h2>
            <%= form_with model: book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book', class: 'btn btn-sm btn-success' %>
            <% end %>
        </div>
