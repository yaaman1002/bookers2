<p id="notice"></p>
<div class="container px-5 px-sm-o">
  <div class="row">
    <div class="col-md-3">
      <h1>User Info</h1>
          <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                 <tr><th>name</th></tr>
                 <tr><th>introduction</th></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
                <i class="fa-solid fa-user-plus"></i>
              <% end %>
            </div>

          <h1>New book</h1>
            <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table">
            <therd>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
              </therd>
              <tbody>
                <%= @books.each do |book| %>
                <tr>
                  <td><%= image_tag @user.get_profile_image(100,100) %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
         </div>
       </div>