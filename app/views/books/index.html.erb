<h1>User Info</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
        <% if book.image.attached? %>
          <%= image_tag list.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>

          <h1>New book</h1>
            <%= form_with model: @book.new do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            
            <h4>Opinion</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
        </div>
        <div class="col-lg-8">
          <% if book.save %>
         <table class="table table-striped">
         <thead>
         <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
         </tr>
        <tbody>
        <% @books.each do |book| %>
          <tr>写真のtag、その下にusers_path(user一覧ページ)
            <td><%= link_to book.title,book_path(@book.id) %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
   </div>
      
  </div>
</div>       
      
      
  