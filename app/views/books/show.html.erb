<%= flash[:notice] %>
<div class="container px-5 px-sm-o">
  <div class="row">
    <div class="col-md-3">
      <h1>User Info</h1>
          <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                 <tr><th>name</th></tr>
                 <tr><th>introduction</th></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
                <i class="fa-solid fa-user-plus"></i>
              <% end %> 
            </div>
      
          <h1>New book</h1>
            <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            
            <h4>Opinion</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
            <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
         <h2>Book detail</h2>
          <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td colspan="3"></td>
              <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
              <td><%=link_to 'Destroy', book_path(@book), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
            </tr>
          </tbody>
        </table>
        </div>
      </div>
    </div>