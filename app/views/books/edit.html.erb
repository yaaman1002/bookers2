<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
          <h1>Editing Book</h1>
          <%= form_with model: @book, url: book_path(@book.id) do |f| %>
           <h4>Title</h4>
           <%= f.text_field :title %>
           <h4>Opinion</h4>
           <%= f.text_area :body %>
           <%= f.submit 'Update Book' %>
           
           <%= link_to "Show", book_path(@book.id) %>|
           <%= link_to "Back", books_path %>
           <% end %>
        </div>
      </div>
    </div>
</main>