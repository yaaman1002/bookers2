
 
 
 <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>
 </div>
 
 <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table">
     <thead>
       <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
       </tr>
     </thead>
     <% @users.each do |user| %>
      <p><%= image_tag user.get_image %></p>
      <p><%= user.name %></p>
      <p><%= link_to "Show", url: user_path(current_user.id) %></p>
     <% end %>
   </table>
 </div>