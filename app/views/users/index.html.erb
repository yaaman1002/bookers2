<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User Info</h1>
            <table class="table">
              <tbody>
                <tr></tr>
                 <tr><th>name</th></tr>
                 <tr><th>introduction</th></tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to edit_book_path, class: 'btn btn-outline-secondary btn-block' do %>
                <i class="fa-solid fa-user-plus"></i>
              <% end %> 
            </div>
      
          <h1>New book</h1>
            <%= form_with model: @books.new do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            
            <h4>Opinion</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
            <% end %>
        </div>
        <div class="col-lg-8">
         <table class="table table-striped">
         <thead>
         <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
         </tr>
        <tbody>
        <% @books.each do |book| %>
          <tr>写真のtag、その下にusers_path(user一覧ページ)
            <td><%= link_to book.title,book_path(@book.id) %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
   </div>
      
  </div>
</div>       