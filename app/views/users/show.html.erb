<%= flash[:notice] %>
<%= flash[:success] %>
  <%= render 'books/list', user: @user, book: @book %>
            <div class="col-lg-8 offset-md-1">
                <h1>Books</h1>
                 <table class="table table-striped">
                 <thead>
                 <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                 </tr>
                <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                 </tr>
                 <% end %>
    
        </tbody>
    </thead>
 </table>
</div>
